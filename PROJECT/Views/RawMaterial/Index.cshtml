@model IEnumerable<RawMaterial>
@{
}
<br />
<br />


<div class=" text-right">
    <form method="post" asp-action="search">

        
        <input type="text" name="name" />
        <input type="submit" class=" btn btn-primary" value="Search" asp-action="Search" />

    </form>
</div>
<br />

<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Raw Material List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <h4 class="text-info">Raw Material</h4>
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.name)
                    </th>
                    <th>
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    @if (item.type == "New")
                    {
                        <tr>
                            <td>

                                @Html.DisplayFor(m => item.name)
                            </td>
                            <td>
                                <partial name="_tableButtonPartial" model="item.Id" />
                            </td>
                        </tr>
                    }
                }
            </table>
            <h4 class="text-info">Raw Material Stock</h4>
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.name)
                    </th>
                    <th>
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    @if (item.type == "Stock")
                    {
                        <tr>
                            <td>

                                @Html.DisplayFor(m => item.name)
                            </td>
                            <td>
                                <partial name="_tableButtonPartial" model="item.Id" />
                            </td>
                        </tr>
                    }
                }
            </table>
        }
        else
        {
            <p>No Raw Material Exists</p>
        }
    </div>
</div>
