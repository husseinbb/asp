@model Customer

    @{
        ViewData["Title"] = "Create";
    }

    <br />
    <h2 class="text-info">Create Customer</h2>
    <br />

    <form method="post" asp-action="Create" enctype="multipart/form-data">
        <div class="border backgroundWhite">
            <div asp-validation-summary="ModelOnly" class="text-danger">

            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="fname" class="col-form-label">First name</label>
                </div>
                <div class="col-5">
                    <input asp-for="fname" class="form-control" />
                </div>
                <span asp-validation-for="fname" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="lname" class="col-form-label">Last name</label>
                </div>
                <div class="col-5">
                    <input asp-for="lname" class="form-control" />
                </div>
                <span asp-validation-for="lname" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="address" class="col-form-label">Address</label>
                </div>
                <div class="col-5">
                    <input asp-for="address" class="form-control" />
                </div>
                <span asp-validation-for="address" class="text-danger"></span>
            </div>



            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="CNIC" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="CNIC" class="form-control" />
                </div>
                <span asp-validation-for="CNIC" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="contact" class="col-form-label">Contact</label>
                </div>
                <div class="col-5">
                    <input asp-for="contact" class="form-control" />
                </div>
                <span asp-validation-for="contact" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="ImageFile" class="col-form-label">Picture</label>

                </div>
                <div class="col-5">
                    <input asp-for="ImageFile" accept="image/*" />

                </div>
                </div>
                <span asp-validation-for="ImageFile" class="text-danger"></span>
                <div class="form-group row">
                    <div class="col-5 offset-2">
                        <partial name="_CreateAndBacktoList" />
                    </div>
                </div>
            </div>
    </form>